<div class="pinned-section">
{{#get "pages" limit="4" filter="featured:true" order="published_at desc" as |pinned_pages|}}
{{#if pinned_pages}}
	<div class="pinned-pages global-special">
		<h2><span>{{t "Announcements"}}</span></h2>
		{{#foreach pinned_pages visibility="all"}}
		{{>special_section}}
		{{/foreach}}
	</div>
{{/if}}
{{/get}}

